<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CreamCloud" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary color -->
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Accent color -->
        <item name="colorAccent">@color/coffee</item>
        <!-- Error color -->
        <item name="colorError">@color/toffee</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Background color -->
        <item name="colorOnBackground">@color/dark_gray</item>
        <item name="android:windowBackground">@color/light_cream</item>
    </style>

    <style name="Theme.CreamCloud" parent="Base.Theme.CreamCloud" />
</resources>